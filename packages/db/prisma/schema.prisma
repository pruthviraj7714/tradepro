generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String     @id @default(uuid())
  email         String     @unique
  usdBalance    Int        @default(0)
  positions     Position[]
}

model Position {
  id         String         @id
  asset      String
  leverage   Int
  margin     Int
  slippage   Int
  type       PositionType
  userId     String
  openPrice  Int
  qty        Float
  status     PositionStatus @default(OPEN)
  closePrice Int?
  pnl        Float?
  openedAt   DateTime
  closedAt   DateTime?

  user User @relation(fields: [userId], references: [id])
  @@index([userId])
}

model EventLog {
  id          String   @id @unique
  type        EventType
  processedAt DateTime @default(now())
}

enum PositionStatus {
  OPEN
  CLOSE
}

enum PositionType {
  LONG
  SHORT
}

enum EventType {
  ORDER_OPEN
  ORDER_CLOSE
}